@model IEnumerable<CommentForm.Models.CommentFormModel>

@{
	ViewBag.Title = "Index";
}

<h2>Index</h2>

<div class="row">
	@foreach (var item in Model)
	{
		<div class="col-md-4">
			<div class="thumbnail">
				<div class="caption">
					<h3>@Html.DisplayFor(modelItem => item.Name)</h3>
					<p>@Html.DisplayFor(modelItem => item.Comment)</p>
					<p><span class="label label-default">@Html.DisplayNameFor(model => model.Priority):</span>&nbsp;<strong>@Html.DisplayFor(modelItem => item.Priority)</strong></p>
					<p>@Html.ActionLink("Details", "Details", new { id = item.ID }, new { @class = "btn btn-primary", role="button" })</p>
					
				</div>
			</div>
		</div>
	}
</div>

